{
	"compilerOptions": {
		"module": "es2020",
		"target": "es2019",
		"declaration": true,
		"outDir": "./lib",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"moduleResolution": "Node",
		"noImplicitAny": true,
		"sourceMap": true,
		"types": ["jest", "node"],
		"downlevelIteration": true
	},
	"include": ["src/**/*", "__test__/range.spec.ts"],
	"exclude": ["node_modules", "**/*.(spec|test).ts"]
}
